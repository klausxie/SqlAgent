{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "database-tools": {
      "type": "local",
      "command": [
        "java",
        "-jar",
        "/path/to/sqlagent-mcp-server.jar"
      ],
      "enabled": true,
      "environment": {
        "DB_TYPE": "mysql",
        "DB_HOST": "your-database-host",
        "DB_PORT": "3306",
        "DB_USER": "your-username",
        "DB_PASSWORD": "your-password",
        "DB_NAME": "your-database"
      }
    }
  }
}
